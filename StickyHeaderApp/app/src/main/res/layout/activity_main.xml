<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ggikko.me.stickyheaderapp.MainActivity">

    <ggikko.me.stickyheaderapp.CustomScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_text1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C5CAE9"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="header1" />

            <TextView
                android:id="@+id/header_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C5CAE9"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="header2" />

            <TextView
                android:id="@+id/header_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C5CAE9"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="header3" />

            <TextView
                android:id="@+id/header_text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C5CAE9"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="header4" />

        </LinearLayout>

    </ggikko.me.stickyheaderapp.CustomScrollView>

    <ggikko.me.stickyheaderapp.CustomScrollView
        android:id="@+id/scroll2"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="content1" />

            <TextView
                android:id="@+id/content_header_text2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#C5CAE9"
                android:padding="16dp"
                android:text="header2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="conten2" />

            <TextView
                android:id="@+id/content_header_text3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#C5CAE9"
                android:padding="16dp"
                android:text="header3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="content3" />

            <TextView
                android:id="@+id/content_header_text4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#C5CAE9"
                android:padding="16dp"
                android:text="header4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="content4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:text="hallo" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="hallo" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="hallo" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="hallo" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="hallo" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="hallo" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="hallo" />


        </LinearLayout>

    </ggikko.me.stickyheaderapp.CustomScrollView>

</LinearLayout>
